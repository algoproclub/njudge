    "version": "0.2.0",
    "configurations": [

        {
            "name": "Attach to web (docker)",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "port": 40000,
            "host": "127.0.0.1",
            "debugAdapter": "dlv-dap",
            "showLog": true,
             "substitutePath": [
                { "from": "${workspaceFolder}", "to": "/app/" },
                {"to": "/root/go/pkg/", "from": "/home/aron/go/pkg/"}
            ]
        },

        {
            "name": "Attach to judge (docker)",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "port": 40001,
            "host": "127.0.0.1",
            "debugAdapter": "dlv-dap",
            "showLog": true,
            "substitutePath": [
                { "from": "${workspaceFolder}", "to": "/app/" },
            ]
        }
    ]
}